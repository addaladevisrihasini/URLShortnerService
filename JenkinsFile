pipeline {
    agent any

    tools {
        nodejs 'Node18'  // This matches the Name you gave in Jenkins Tools
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/addaladevisrihasini/URLShortnerService.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    bat 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('backend') {
                    bat 'npm test'
                }
            }
        }

        stage('Start App') {
            steps {
                dir('backend') {
                    bat 'npm start'
                }
            }
        }
    }
}
